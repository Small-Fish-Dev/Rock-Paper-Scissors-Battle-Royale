@namespace RockPaperScissors
@inherits RootPanel

<style>
    UI {
        position: absolute;
        height: 100%;
        width: 100%;
        left: 0;
        top: 0;
        background-color: white;
    }
    .title {
        font-size: 40px;
        color: black;
    }
    Icon {
        position: absolute;
        left: 50%;
        top: 50%;
        height: 80px;
        aspect-ratio: 1;
        font-size: 60px;
        text-align: center;
    }
</style>

<root>
    <panel class="title">
        Your current state is: Damn @RockPaperScissors.Game.State
    </panel>
</root>

@code
{
    protected override int BuildHash()
    {
        return HashCode.Combine(Time.Now);
    }
}