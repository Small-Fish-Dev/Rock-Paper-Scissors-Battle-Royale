@namespace RockPaperScissors
@inherits RootPanel

<style>
    UI {
        position: absolute;
        height: 100%;
        width: 100%;
        left: 0;
        top: 0;
        background-color: white;
    }
    .title {
        font-size: 40px;
        color: black;
    }
    Icon {
        position: absolute;
        height: @Length.Pixels( 50f / RockPaperScissors.Game.Zoom );
        width: @Length.Pixels( 50f / RockPaperScissors.Game.Zoom );
        font-size: @Length.Pixels( 40f / RockPaperScissors.Game.Zoom );
        text-align: center;
    }
</style>

<root>
    <panel class="title">
        Your current state is: Damn @RockPaperScissors.Game.State
    </panel>
</root>

@code
{
    protected override int BuildHash()
    {
        return HashCode.Combine(Time.Now);
    }
}